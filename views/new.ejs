<% include ./partials/header %>

    <div class="ui main text container segment">   
        <div class="ui huge header">New Blog Post</div>
        <form class="ui form" action="/blogs" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" placeholder="Blog Title">
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" placeholder="Image URL">
            </div>
            <div class="field">
                <label>Article Body</label>
                <textarea  name="blog[body]">  </textarea>
            </div>
            <div class="field">
                <input class="ui teal big button" type="submit">
            </div>
        </form>
    </div>
   


<% include ./partials/footer %>