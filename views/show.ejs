<% include ./partials/header %>

    <div class="ui main text container"> 
        <!--uses the object passed into SHOW route. Look for res.render("show", {blog: foundBlog}) in app.js-->
        <div class="ui huge header"><%= blog.title %></div>
        <span><%= blog.created.toDateString() %></span>
        <div class="ui top attached">
            <div class="item">
                <img class="ui centered image" src="<%= blog.image %>">
            </div>
            <div class="content">
              <p><%- blog.body %></p>  
            </div>
            <!--Using method-override to change the POST request to a delete request
            ?_method=DELETE-->
            <a class="ui teal big button" href="/blogs/<%=blog._id %>/edit">Edit</a>
            <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                <button class="ui red big button">Delete</button>
            </form>
        </div>
    </div>
   


<% include ./partials/footer %>